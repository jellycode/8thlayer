<div class="">

	{% for block in section.blocks %}

		{% case block.type %}

		{% when 'social' %}

			<div class="grid__item" {{ block.shopify_attributes }}>
			</div>

		{% when 'menu' %}

			<div class="grid__item" {{ block.shopify_attributes }}>
			</div>

		{% when 'text' %}

			<div class="grid__item" {{ block.shopify_attributes }}>
				{% if block.settings.title == "" %}
					<div class="h3 footer-header">{{ 'layout.footer.contact' | t }}</div>
				{% else %}
					<div class="h3 footer-header">{{ block.settings.title | escape }}</div>
				{% endif %}
				{% if block.settings.richtext == "" %}
					<div class="rte footer-article">{{ 'layout.footer.contact_text' | t }}</div>
				{% else %}
					<div class="rte footer-article">{{ block.settings.richtext }}</div>
				{% endif %}
			</div>

		{% when 'image' %}

			<div class="grid__item" {{ block.shopify_attributes }}>
			</div>

		{% endcase %}
	{% endfor %}

</div>

{% schema %}
{
    "name": {
        "en": "Two Column"
    },
	"max_blocks": 2,
    "settings": [
        {
            "type": "richtext",
            "id": "footer_text",
            "label": {
                "en": "Footer text"
            }
        }
    ],
    "blocks": [
        {
            "type": "text",
            "name": {
                "en": "Text",
                "de": "Text",
                "es": "Texto",
                "fr": "Texte",
                "pt-PT": "Texto"
            },
            "settings": [
                {
                    "type": "text",
                    "id": "title",
                    "label": {
                        "en": "Heading"
                    }
                },
                {
                    "type": "richtext",
                    "id": "richtext",
                    "label": {
                        "en": "Text"
                    }
                }
            ]
        },
        {
            "type": "menu",
            "name": {
                "en": "Navigation"
            },
            "settings": [
                {
                    "type": "text",
                    "id": "menu_title",
                    "label": {
                        "en": "Heading"
                    }
                },
                {
                    "type": "link_list",
                    "id": "footer_linklist",
                    "label": {
                        "en": "Footer menu"
                    },
                    "default": "footer",
                    "info": {
                        "en": "This navigation has limited support for dropdown items"
                    }
                }
            ]
        },
        {
            "type": "social",
            "name": {
                "en": "Social icons"
            },
            "limit": 1,
            "settings": [
                {
                    "type": "text",
                    "id": "social_title",
                    "label": {
                        "en": "Heading"
                    }
                },
                {
                    "type": "paragraph",
                    "content": {
                        "en": "Edit your social settings and accounts in Theme settings"
                    }
                }
            ]
        },
        {
            "type": "image",
            "name": {
                "en": "Image"
            },
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": {
                        "en": "Image"
                    }
                },
                {
                    "type": "url",
                    "id": "link",
                    "label": {
                        "en": "Link"
                    },
                    "info": {
                        "en": "Optional"
                    }
                },
                {
                    "type": "text",
                    "id": "title",
                    "label": {
                        "en": "Title"
                    },
                    "info": {
                        "en": "Optional"
                    }
                }
            ]
        }
    ],
    "presets": [
      {
        "name": "Two Column",
        "category": "Custom"
      }
    ]
}
{% endschema %}
