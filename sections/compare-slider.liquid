  {
    "name": "Compare Slider",
    "settings": [
        {
            "type": "header",
            "content": {
                "en": "Content"
            }
        },
        {
            "type": "text",
            "id": "subtitle",
            "label": {
                "en": "Sub Title"
            }
		},
        {
            "type": "text",
            "id": "title",
            "label": {
                "en": "Main Title"
            }
		},
        {
            "type": "text",
            "id": "intro",
            "label": {
                "en": "Intro Paragraph"
            }
		},
        {
            "type": "richtext",
            "id": "content",
            "label": {
                "en": "Blurb"
            }
		},
        {
            "type": "text",
            "id": "primarybutton_label",
            "label": {
                "en": "Label"
            }
		},
        {
            "type": "url",
            "id": "primarybutton_link",
            "label": {
                "en": "Link"
            }
		},
        {
            "type": "header",
            "content": {
                "en": "Compare Images"
            }
        },
        {
            "type": "image_picker",
            "id": "left_image",
            "label": {
                "en": "Left Image"
            }
        },
        {
            "type": "image_picker",
            "id": "right_image",
            "label": {
                "en": "Right Image"
            }
        },
        {
            "type": "richtext",
            "id": "caption",
            "label": {
                "en": "Caption"
            }
		}
    ],
    "presets": [
      {
        "name": "Compare Slider",
        "category": "Custom"
      }
    ]
  }
